@model BICT.Payetakht.Data.ViewModels.CarYearViewModel
@{
    ViewBag.Year = "Create";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using (Html.BeginForm())
{
    if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("مدل", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownList("CarModelID", (IEnumerable<SelectListItem>)ViewBag.CarModelList, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Year, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Year, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">ذخیره</button>
            <a href="~/Dashboard/CarYear">بازگشت</a>
        </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
}
