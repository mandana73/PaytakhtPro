@model IList<BICT.Payetakht.Data.ViewModels.CityViewModel>
@{
    ViewBag.Title = "شهر";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="table-responsive">
    <table class="table-bordered table-condensed table-hover table-striped">
        <tr>
            <th>شهر</th>
            <th></th>
        </tr>
          @foreach (var item in Model)
        {
            <tr>

                <td>@item.Title</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-info" href="@Url.Action("Edit",new { id = item.ID })">ویرایش</a>
                        <a class="btn btn-danger" href="@Url.Action("Delete",new { id = item.ID })">حذف</a>
                    </div>
                </td>
            </tr>
        }
    </table>

</div>
<a href="@Url.Action("Create")">انتخاب شهر</a>

