@model BICT.Payetakht.Data.ViewModels.DashboardViewModel
@{
    ViewBag.Title = "index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="row">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-aqua"><i class="fa fa-industry" aria-hidden="true"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">سازنده ها</span>
                        <span class="info-box-number">@Model.CarManufactureCount</span>
                    </div><!-- /.info-box-content -->
                </div><!-- /.info-box -->
            </div><!-- /.col -->
            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-red"><i class="fa fa-car"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">مدل ها</span>
                        <span class="info-box-number">@Model.CarModelCount</span>
                    </div><!-- /.info-box-content -->
                </div><!-- /.info-box -->
            </div><!-- /.col -->
            <!-- fix for small devices only -->
            <div class="clearfix visible-sm-block"></div>
            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-green"><i class="fa fa-spinner" aria-hidden="true"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">جزئیات</span>
                        <span class="info-box-number">@Model.CarDetailCount</span>
                    </div><!-- /.info-box-content -->
                </div><!-- /.info-box -->
            </div><!-- /.col -->
        </div>

        <div class="row">

            <div class="col-lg-12 connectedSortable">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">
                            نمای کلی
                        </h3>
                        <div class="box-tools pull-left">
                            <button class="btn btn-box-tool" data-widget="collapse" data-tooltip="tooltip" title="باز و بسته شدن"><i class="fa fa-minus"></i></button>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-4 col-sm-6 col-xs-12">
                                <div class="small-box bg-green">
                                    <div class="inner">
                                        <h3>
                                            @Model.AuditUnRead
                                        </h3>
                                        <p>
                                            درخواست های بازدید نشده
                                        </p>
                                    </div>
                                    <div class="icon">
                                        <i class="fa fa-check-square-o"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-6 col-xs-12">
                                <div class="small-box bg-gold">
                                    <div class="inner">
                                        <h3>
                                           @Model.AuditUnDone
                                        </h3>
                                        <p>
                                            درخواست های انجام نشده
                                        </p>
                                    </div>
                                    <div class="icon">
                                        <i class="fa fa-exclamation-triangle"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 col-sm-6 col-xs-12">
                                <div class="small-box bg-light-blue">
                                    <div class="inner">
                                        <h3>
                                            @Model.AuditAllRequest
                                        </h3>
                                        <p>
                                            تعداد کل درخواست ها
                                        </p>
                                    </div>
                                    <div class="icon">
                                        <i class="fa fa-pie-chart"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
