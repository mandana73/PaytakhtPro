@model BICT.Payetakht.Data.ViewModels.ReadingsViewModel
@{
    ViewBag.DashboardTitle = "خواندنی ها";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using (Html.BeginForm())
{
    <div class="row">

    <div class="form-group">
        @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
        </div>
    </div>
        </div>
        
        <div class="row">
    <div class="form-group">
        @Html.LabelFor(m => m.Content, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Content, new { @class = "form-control", id = "Content" })
        </div>
    </div>
            </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">ذخیره</button>
            <a href="@Url.Action("Index")">بازگشت</a>
        </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval");
        @Scripts.Render("~/Scripts/ckeditor/ckeditor.js")
        @Scripts.Render("~/Scripts/ckeditor/translations/fa.js")
        <script>
            ClassicEditor
                .create(document.querySelector('#Content'), {
                    language: 'fa',
                    toolbar: ['heading', '|', 'bold', 'italic', 'link', 'bulletedList', 'numberedList', 'blockQuote'],
                    direction: 'rtl'
                })
                .catch(error => {
                    console.error(error);
                });
        </script>
    }
}


