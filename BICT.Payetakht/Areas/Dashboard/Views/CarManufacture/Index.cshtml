@model IList<BICT.Payetakht.Data.ViewModels.CarManufactureViewModel>
@{
    ViewBag.DashboardTitle = "سازنده";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<div class="table-responsive">
    <table class="table table-bordered table-condensed table-hover table-striped">
        <tr>
            <th>عنوان</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>

                <td>@item.Title</td>
                <td><a href="@Url.Action("Edit","CarManufacture",new { id = item.ID })">ویرایش</a></td>
                <td><a href="@Url.Action("Delet","CarManufacture",new { id = item.ID })">حذف</a></td>
            </tr>
        }
    </table>
</div>
<a href="~/Dashboard/CarManufacture/Create">ایجاد عنوان سازنده جدید</a>